<% if (statusMessage) { %>
    <div class="alert <%= statusMessage.type === 'success' ? 'alert-success' : 'alert-danger' %>">
        <%= statusMessage.text %>
    </div>
<% } %>

<div class="author">
    <h1 class="author_heading">
        <% if (username) { %>
             Hello <%= username %>, Good to see You
        <% } else { %>
            Welcome to MyDay
        <% } %>
    </h1>
    <p class="author_body">
        Hope, You are having a Good Day
    </p>

    <img src="/images/hero-image.webp" alt="person looking out of the window" class="hero_image" width="600" height="300">

    <section class="articles">
        <h2 class="articles_heading">
            <%= user ? 'Your Posts:' : 'Latest Posts:' %>
        </h2>
        <% if (data && data.length > 0) { %>
            <ul class="article-ul">
                <% data.forEach(post => { %>
                    <li>
                        <a href="/post/<%= post._id %>">
                            <span><%= post.title %></span>
                            <span class="article-list_date"><%= post.createdAt.toDateString() %></span>
                        </a>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No posts found.</p>
        <% } %>
        <% if (nextPage !== null) { %>
            <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
        <% } %>
    </section>
    
    
</div>
